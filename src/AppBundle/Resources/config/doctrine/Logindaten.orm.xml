<!-- config/xml/Product.dcm.xml -->
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

      <entity name="AppBundle\Entity\Logindaten" table="logindata">
          <id name="id" type="integer">
              <generator strategy="AUTO" />
          </id>

          <field name="email" type="string" unique="true" />
          <field name="password" type="string" />
          <field name="adminrights" type="boolean" />
          <one-to-one field="teilnehmer" target-entity="Teilnehmer">
            <join-column name="teilnehmer_id" referenced-column-name="id" />
          </one-to-one>
      </entity>
</doctrine-mapping>