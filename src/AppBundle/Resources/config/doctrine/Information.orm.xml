<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
		http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
	
    <entity name="AppBundle\Entity\Information" table="information">
        <id name="id" type="integer">
			<generator strategy="AUTO" />
        </id>
		
		<field name="datum" type="date" nullable="true" />
		<field name="infotype" type="string" />
		<field name="infotitle" type="string" />
        <field name="content" type="string" />
		
		<!-- Relationships -->
		<many-to-one field="firma" target-entity="Firma" inversed-by="information">
            <join-column name="company_id" referenced-column-name="id" />
        </many-to-one>
		<many-to-one field="user" target-entity="User" inversed-by="information">
            <join-column name="user_id" referenced-column-name="id" />
        </many-to-one>
    </entity>
</doctrine-mapping>