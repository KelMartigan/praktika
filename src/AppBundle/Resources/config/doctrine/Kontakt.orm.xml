<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

      <entity name="AppBundle\Entity\Kontakt" table="contacts">
          <id name="id" type="integer">
              <generator strategy="AUTO" />
          </id>
        
        <!-- Relationships -->	
          <many-to-one field="user" target-entity="User" inversed-by="Kontakt">
            <join-column name="user_id" referenced-column-name="id" />
          </many-to-one>
          <many-to-one field="ansprechpartner" target-entity="Ansprechpartner" inversed-by="Kontakt">
            <join-column name="ansprechpartner_id" referenced-column-name="id" />
          </many-to-one>
          <one-to-many field="korrespondenz" target-entity="Korrespondenz" inversed-by="Kontakt">
            <join-column name="korrespondenz_id" referenced-column-name="id" />
          </one-to-many>
          
          <!-- Cascade Optionen -->
      </entity>
</doctrine-mapping>