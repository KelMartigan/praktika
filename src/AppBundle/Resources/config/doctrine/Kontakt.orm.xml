<!-- config/xml/Product.dcm.xml -->
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

      <entity name="AppBundle\Entity\Kontakt" table="contacts">
          <id name="id" type="integer">
              <generator strategy="AUTO" />
          </id>
        
          <one-to-one field="user" target-entity="User">
            <join-column name="user_id" referenced-column-name="id" />
          </one-to-one>
          <one-to-one field="ansprechpartner" target-entity="Ansprechpartner">
            <join-column name="ansprechpartner_id" referenced-column-name="id" />
          </one-to-one>
          <many-to-one field="korrespondenz" target-entity="Korrespondenz">
            <join-column name="korrespondenz_id" referenced-column-name="id" />
          </many-to-one>
      </entity>
</doctrine-mapping>