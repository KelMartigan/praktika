{% extends 'base.html.twig' %}
{% block header %}
Praktika
{% endblock %}
{% block body %}
<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Benutzer</th>
            <th>Firma</th>
            <th>Beruf</th>
            <th>Start</th>
            <th>Ende</th>
        </tr>
    </thead>
    <tbody>
    {% for praktikum in praktika %}
        <tr>
            <td>
        {% if is_granted('ROLE_STAFF') %}
        <a href="{{ path('editpraktikum', {'id': praktikum.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
        {% else %}
        <a href="{{ path('editmypraktikum') }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
        {% endif %}
            </td>
            <td>{{ praktikum.user.username }}</td>
            <td>{{ praktikum.firma.name }}</td>
            <td>{{ praktikum.beruf }}</td>
            <td>{{ praktikum.startdatum |date('d.m.Y')}}</td>
            <td>{{ praktikum.enddatum |date('d.m.Y')}}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}