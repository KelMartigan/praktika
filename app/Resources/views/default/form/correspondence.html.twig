{% extends 'base.html.twig' %}
{% block header %}
Korrespondenz erstellen
{% endblock %}
{% block body %}
    <h2>Erstelle eine neue Korrespondenz</h2>    
    {{ form_start(form) }}
    <fieldset>
        <legend>Bitte Daten eingeben</legend>
        <table>
            <tr>
                <td>{{ form_label(form.type, 'Art der Korrespondenz') }}</td>
                <td>{{ form_widget(form.type) }}</td>
                <td>{{ form_errors(form.type) }}</td>
            </tr>
            <tr>
                <td>{{ form_label(form.datum, 'Datum') }}</td>
                <td>{{ form_widget(form.datum) }}</td>
                <td>{{ form_errors(form.datum) }}</td>
            </tr>
            <tr>
                <td>{{ form_label(form.content, 'Inhalt') }}</td>
                <td>{{ form_widget(form.content) }}</td>
                <td>{{ form_errors(form.content) }}</td>
            </tr>
        </table>
        <input type="submit" value="erstellen">
    </fieldset>
    {{ form_errors(form) }}
    {{ form_end(form) }}
    
    <br>Zur√ºck zur <a href="{{ path('homepage') }}">Hauptseite</a>
{% endblock %}